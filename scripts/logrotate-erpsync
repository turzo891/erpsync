# ERP Sync Logrotate Configuration
# Copy to: /etc/logrotate.d/erpsync

# Nginx logs
/var/log/nginx/erpsync.access.log /var/log/nginx/erpsync.error.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 0640 www-data adm
    sharedscripts
    postrotate
        if [ -f /var/run/nginx.pid ]; then
            kill -USR1 `cat /var/run/nginx.pid`
        fi
    endscript
}

# Gunicorn logs
/var/log/erpsync/gunicorn-access.log /var/log/erpsync/gunicorn-error.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    create 0640 www-data www-data
    sharedscripts
    postrotate
        systemctl reload erpsync-gunicorn.service > /dev/null 2>&1 || true
    endscript
}

# Django application logs
/var/log/erpsync/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 0640 www-data www-data
}
